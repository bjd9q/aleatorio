<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".TrofeoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:text="Introduce tu nombre"
            android:textSize="20sp"

            />

        <EditText
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:id="@+id/concursante"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="GENERAR GANADOR"
            android:textSize="10sp"
            android:id="@+id/btnGenerarGanador"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AGREGAR CONCURSANTE"
            android:textSize="10sp"
            android:id="@+id/btnAgregarConcursante"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/ganadorTxt"
            android:gravity="center"
            android:textSize="40dp"
            />
    </LinearLayout>

</LinearLayout>